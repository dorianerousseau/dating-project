{% extends 'base.html.twig' %}

{% block title %} Profil de {{ app.user.pseudo }} {% endblock %}

{% block body %}
    <div class="grix xs4 container">
        <!-- afficher le message du add.flash -->
        {% for message in app.flashes('message') %}
            <div class="col-xs4">
                <div class="p-3 my-2 rounded-2 success">{{ message }}</div>
            </div>
        {% endfor %}
        <!-- afficher le profil -->
        <div class="col-xs4">
            <h1> Profil de {{ app.user.pseudo }} </h1>
        </div>
        <div class="col-xs1">Pseudo :</div>
        <div class="col-xs3">{{ app.user.pseudo }}</div>
        <div class="col-xs1">Bio :</div>
        <div class="col-xs3">{{ app.user.bio }}</div>
        <div class="col-xs1">Email :</div>
        <div class="col-xs3">{{ app.user.email }}</div>
        <div class="col-xs4">
            <a href="{{ path('user_profil_modifier') }}" class="btn blue">Modifier le profil</a>
            <a href="{{ path('user_password_modifier') }}" class="btn blue">Modifier le mot de passe</a>
        </div>
    </div> <!-- /.grix -->
{% endblock %}